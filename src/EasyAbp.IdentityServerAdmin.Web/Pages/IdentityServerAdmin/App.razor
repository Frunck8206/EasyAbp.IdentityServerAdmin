<CascadingAuthenticationState>

    <Router AppAssembly="@typeof(IdentityServerAdminWebModule).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <h3 class="text-center mt-4"> ‚ùå You have no permission access to this page!</h3>
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p>Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>


</CascadingAuthenticationState>